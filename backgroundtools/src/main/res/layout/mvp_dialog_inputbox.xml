<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/tools">

    <data>

        <!--STATUS-->
        <import type="es.marser.backgroundtools.dialogs.widget.inputbox.BoxSettings" />

        <variable
            name="settings"
            type="BoxSettings" />

        <!--DATA-->
        <import type="es.marser.backgroundtools.dialogs.model.DialogModel" />

        <variable
            name="model"
            type="DialogModel" />

        <import type="es.marser.backgroundtools.handlers.WindowAction" />

        <!--BUTTONS-->
        <variable
            name="winaction"
            type="WindowAction" />

        <import type="es.marser.backgroundtools.dialogs.model.ButtonsSetModel" />

        <variable
            name="buttonsetmodel"
            type="ButtonsSetModel" />

    </data>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        foo:colorDialogBodyBackground="@{model.icon}">

        <!--HEAD-->
        <include
            layout="@layout/mvp_dialog_head_title"
            bind:model="@{model}" />

        <!--BODY-->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="?attr/dialogs_default_margin"
                android:orientation="vertical">

                <!--Name-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/box_input_2"
                    style="@style/bt_textinputlayout_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@{settings.hint}"
                    app:hintTextAppearance="@style/bt_counter_label.text"
                    app:errorText="@{settings.errorText}"
                    app:errorTextAppearance="@style/bt_error_label.text"
                    app:passwordToggleEnabled="@{settings.passwordCount}"
                    app:passwordToggleTint="?attr/colorPrimary"
                    app:counterEnabled="@{settings.counterCount}"
                    app:counterTextAppearance="@style/bt_counter_label.text"
                  >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/field_input_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="@{settings.inputType}"
                        android:lines="@{settings.lines}"
                        android:text="@={settings.body}"
                        android:textColor="?attr/dialogs_edittext_text_color"
                        />
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v4.widget.NestedScrollView>

        <!--KEY-->
        <android.support.v7.widget.ContentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="@{model.keyname}">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_dialog_dont_show_again"
                android:textColor="?attr/colorControlNormal"
                android:textSize="12sp" />
        </android.support.v7.widget.ContentFrameLayout>

        <!--FOO-->
        <include
            layout="@layout/mvp_buttons_set"
            bind:buttonsetmodel="@{buttonsetmodel}"
            bind:winaction="@{winaction}" />

    </android.support.v7.widget.LinearLayoutCompat>
</layout>