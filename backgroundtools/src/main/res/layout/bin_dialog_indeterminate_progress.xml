<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/tools">

    <data>

        <import
            alias="tt"
            type="es.marser.tools.TextTools" />

        <import type="es.marser.backgroundtools.dialogs.model.DialogProgressModel" />

        <variable
            name="model"
            type="DialogProgressModel" />
    </data>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bt_base_dialogs_root_primary"
        android:keepScreenOn="true"
        android:orientation="vertical">

        <!--Head-->
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bt_base_dialogs_margin"
            android:background="@color/bt_primary_dark">
            <!--icono-->
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/bt_l_image"
                android:layout_height="@dimen/bt_l_image"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/bt_base_dialogs_margin"
                android:contentDescription="@string/bt_content"
                android:scaleType="fitXY"
                foo:icon="@{model.icon}" />
            <!--TÃ­tulo-->
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/bt_base_dialogs_margin"
                android:layout_marginLeft="@dimen/bt_base_dialogs_margin"
                android:layout_marginRight="@dimen/bt_base_dialogs_margin"
                android:layout_marginStart="@dimen/bt_base_dialogs_margin"
                android:text="@{tt.limitText(model.title, @integer/bt_limit_text)}"
                android:textColor="@color/bt_secondary_text"
                android:textSize="17sp" />
        </android.support.v7.widget.LinearLayoutCompat>
        <!--Body-->
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/bt_default_padding">

            <ProgressBar
                android:layout_width="@dimen/bt_l_image"
                android:layout_height="@dimen/bt_l_image"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/bt_base_dialogs_margin"
                android:indeterminate="@{model.indeterminate}" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@{tt.limitText(model.temp, @integer/bt_limit_text)}"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
</layout>