<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1440"
    >

    <shape
        android:innerRadius="18dp"
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="true">
        <size
            android:width="@dimen/l_image"
            android:height="@dimen/l_image" />

        <gradient
            android:centerColor="@color/bt_accent_dark"
            android:centerY="0.5"
            android:endColor="@color/bt_accent"
            android:startColor="@color/bt_accent_light"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>