<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_selected="true" >
        <shape>
        <!-- color de fondo -->
        <solid android:color="?attr/colorControlActivated" />

        <!-- curvatura de las esquinas -->
        <corners android:radius="3dp" />

        <!-- padding para dejar una separación prudencial entre los elementos conetenidos y el borde -->
        <padding android:left="4dp" android:top="1dp" android:right="4dp" android:bottom="1dp"/>

        <!-- borde -->
        <stroke
            android:width="1dp"
            android:color="?attr/colorPrimaryDark" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <!-- color de fondo -->
            <solid android:color="@color/bt_primary_light" />

            <!-- curvatura de las esquinas -->
            <corners android:radius="3dp" />

            <!-- padding para dejar una separación prudencial entre los elementos conetenidos y el borde -->
            <padding android:left="4dp" android:top="1dp" android:right="4dp" android:bottom="1dp"/>

            <!-- borde -->
            <stroke
                android:width="1dp"
                android:color="@color/bt_primary_dark" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- color de fondo -->
            <solid android:color="@color/bt_primary_light" />

            <!-- curvatura de las esquinas -->
            <corners android:radius="3dp" />

            <!-- padding para dejar una separación prudencial entre los elementos conetenidos y el borde -->
            <padding android:left="4dp" android:top="1dp" android:right="4dp" android:bottom="1dp"/>

            <!-- borde -->
            <stroke
                android:width="1dp"
                android:color="@color/bt_primary_dark" />
        </shape>
    </item>

</selector>