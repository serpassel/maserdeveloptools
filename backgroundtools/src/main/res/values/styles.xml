<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--LABELS-->
    <style name="bt_error_label">
        <item name="background">@color/bt_transparent</item>
        <item name="android:textColor">@color/bt_wrong_color_red_500</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="bt_head_label">
        <item name="background">@color/bt_transparent</item>
        <item name="android:textColor">@color/bt_secondary_text</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="bt_body_label">
        <item name="background">@color/bt_transparent</item>
        <item name="android:textColor">@color/bt_primary_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--PROGRESSBAR-->
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/com_progressbar_background</item>
        <item name="android:progressDrawable">@drawable/com_progressbar_background</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>