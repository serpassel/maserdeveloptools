<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bt_primary</item>
        <item name="colorPrimaryDark">@color/bt_primary_dark</item>
        <item name="colorAccent">@color/bt_accent</item>
        <item name="colorButtonNormal">@color/bt_transparent</item>
        <item name="textColorPrimary">@color/app_primary_text</item>
        <item name="textColorSecondary">@color/app_secondary_text</item>
    </style>
<!--LABELS-->
    <style name="bt_error_label">
        <item name="background">@color/bt_transparent</item>
        <item name="android:textColor">@color/bt_wrong_color_red_500</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--PROGRESSBAR-->
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/com_progressbar_background</item>
        <item name="android:progressDrawable">@drawable/com_progressbar_background</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <!--BASE_DIALOG UNUSED-->
    <style name="BaseDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--item name="android:background">@android:color/transparent</item-->
    </style>

</resources>