<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--LABELS-->
    <style name="bt_error_label">
        <item name="background">@color/bt_transparent</item>
        <item name="android:textColor">@color/bt_wrong_color_red_500</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--Head label-->
    <style name="bt_head_label">
        <item name="android:background">@color/bt_transparent</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">?attr/dialogs_default_margin</item>
        <item name="android:layout_marginLeft">?attr/dialogs_default_margin</item>
        <item name="android:layout_marginRight">?attr/dialogs_default_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">?attr/dialogs_default_margin</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--body label-->
    <style name="bt_body_label">
        <item name="android:background">@color/bt_transparent</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">?attr/dialogs_default_margin</item>
        <item name="android:layout_marginLeft">?attr/dialogs_default_margin</item>
        <item name="android:layout_marginRight">?attr/dialogs_default_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">?attr/dialogs_default_margin</item>
        <item name="android:textColor">?attr/dialogs_accent_dark</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!--PROGRESSBAR-->
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">?attr/dialogs_progressbar</item>
        <item name="android:progressDrawable">?attr/dialogs_progressbar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <!--BASE_DIALOG UNUSED-->
    <style name="BaseDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--item name="android:background">@android:color/transparent</item-->
    </style>

</resources>