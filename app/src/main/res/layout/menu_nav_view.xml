<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/dialogs_head_background_tint">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/xl_image"
        android:layout_height="@dimen/xl_image"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/nav_top_dimen"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_calendar_2" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="?attr/button_default_margin"
        android:gravity="center_horizontal"
        android:text="@string/nav_title"
        android:textAllCaps="true"
        android:textColor="@color/nav_title_color"
        android:textStyle="bold" />

</android.support.v7.widget.LinearLayoutCompat>